
<p id="notice"><%= notice %></p>
<div class="spacer30"></div>
<div class="spacer30"></div>

<div class="container">

  <div class="search-bar">
  <div class="search-form row">
    <div class="form-input">
  <%= form_tag moms_path, method: :get do %>
  <%= text_field_tag :query,
    params[:query],
    class: "form-control",
    placeholder: "Find a mom"
  %>
</div>
<div class="form-button">
  <%= submit_tag "Search", class: "btn create-button" %>
</div>
<% end %>
 </div>
</div>

  <div class="row">
    <div class="card-columns">
      <% @moms.each do |mom| %>
        <div id="mom-card">
        <div class="col-4">
          <div class="card" id="index-card" style="width: 18rem;"  data-toggle="modal" data-target="#myModal<%= mom.name %>">
              <%= cl_image_tag mom.photo, class: "card-img-top" %>
              <div class="card-body">
               <h2><%= mom.name  %></h2>
               <p><%= mom.bio %></p>
               <div id="price-btn">
               <h3 id="card-button">Book this mom for <span id="price">â‚¬<%= mom.price %></span></h3>
               </div>
              </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>


</div>
